{
  "compilerOptions": {
    "declaration": true,
    "module": "CommonJS",
    "target": "ES2021",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "types": ["node"]
